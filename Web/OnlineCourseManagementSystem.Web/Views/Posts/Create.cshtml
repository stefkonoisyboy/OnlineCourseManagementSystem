@using OnlineCourseManagementSystem.Web.ViewModels.Posts
@model CreatePostInputModel
@{
    this.ViewData["Title"] = "Create Post";
}

<h1 class="text-center my-5">Create Post</h1>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<form asp-controller="Posts" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="alert-danger"></div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter the Title of the Post" />
        <span asp-validation-for="Title" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"> </label>
        <textarea asp-for="Content" class="form-control" rows="12"></textarea>
        <span asp-validation-for="Content" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CourseId"></label>
        <select asp-items="@this.Model.CourseItems" class="form-control custom-radio" id="CourseId" asp-for="CourseId">
        </select>
        <span asp-validation-for="CourseId" class="alert-danger"></span>
    </div>
    <button class="btn btn-info">Create Post</button>
</form>
