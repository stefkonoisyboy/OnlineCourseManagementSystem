                                <div class="assignment-option mx-1 p-2" style="background:#42a5f5;">
                                    <a class="text-white" asp-controller="Assignments" asp-action="CurrentUserAllAssignmentsByCourse" asp-route-courseId="@course.CourseId">Assignments</a>
                                </div>
                            </div>
                            <div class="card-header d-flex justify-content-start">
                                <button class="btn btn-primary" id="btn-options" onclick="openOptions(@course.CourseId)">Options</button>
                            </div>
                            <div class="row row-margin-10">
                                <div class="col-md-6">
                                    Lessons @course.CompletedLecturesCount of @course.CourseLecturesCount
                                </div>
                                <div class="col-md-6">
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @((Math.Floor(course.CompletedLecturesCount / course.CourseLecturesCount * 100)).ToString() + "%;")" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-margin-10">
                                <img src="@course.CourseFileRemoteUrl" height="100" width="100" class="card-img-top" alt="courseImage">
