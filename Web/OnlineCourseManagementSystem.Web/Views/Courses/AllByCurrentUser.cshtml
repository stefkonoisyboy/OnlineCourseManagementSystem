@model OnlineCourseManagementSystem.Web.ViewModels.Courses.AllCoursesByUserListViewModel
@{

}

<style>
    .row-margin-05 {
        margin-top: 0.5em;
    }

    .row-margin-10 {
        margin-top: 1.0em;
    }

    .row-margin-20 {
        margin-top: 2.0em;
    }

    .row-margin-30 {
        margin-top: 3.0em;
    }

    .assignment-options {
        display: none;
        flex-direction: row;
        justify-content: end;
        position: absolute;
        left: 10%;
        bottom: 100%;
        font-size: 12px;
        z-index: 20;
        -webkit-animation: toggleUp 1s ease-in-out normal;
        animation: toggleUp 1s ease-in-out normal;
    }

    .assignment-option {
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 3px 3px 0 0;
    }

        .assignment-option:hover {
            transform: scale(1.03);
            transition: transform 350ms;
        }

    .show {
        display: flex;
    }

    @@keyframes toggleUp {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }
</style>

<head>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.css" />
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

