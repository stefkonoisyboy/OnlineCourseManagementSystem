<style>
    p{
        color:white !important;
    }

    h2 {
        color: dodgerblue;
    }

    .svg {
        color: deepskyblue;
        margin-bottom: 10px;
    }

    .section {
        height: 50vh;
        width: 50vw;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

