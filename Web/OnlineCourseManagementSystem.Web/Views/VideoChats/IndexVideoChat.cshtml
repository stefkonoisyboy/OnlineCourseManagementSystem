@using OnlineCourseManagementSystem.Web.Views.Shared.Components
@using Microsoft.AspNetCore.Identity
@using OnlineCourseManagementSystem.Data.Models
@inject UserManager<ApplicationUser> userManager
@{
    this.ViewData["Title"] = "Video Conference";
    ApplicationUser user = await this.userManager.GetUserAsync(this.User);
}

<style>
    #video-div {
        height: 240px;
        width: 320px;
        border: 2px solid gray;
    }

    video {
        max-width: 100%;
        max-height: 100%;
    }

    img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<body>
    <component type="typeof(VideoConference)" render-mode="ServerPrerendered" param-UserIdentityName="@this.User.Identity.Name" param-UserId="@user.Id" param-IsLecturerOrAdmin="@this.User.IsInRole(GlobalConstants.AdministratorRoleName) || this.User.IsInRole(GlobalConstants.LecturerRoleName)" />
</body>





