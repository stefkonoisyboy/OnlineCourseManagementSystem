@using OnlineCourseManagementSystem.Web.ViewModels.Modules
@model CreateModuleInputModel
@{
    this.ViewData["Title"] = "Create Module";
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<h3 class="text-center my-3">Create Module</h3>

<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <form asp-controller="Modules" asp-action="Create" method="post">
            <div asp-validation-summary="All">
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input class="form-control" type="text" asp-for="Name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SubjectIds">Subjects</label>
                        <select asp-items="@this.Model.SubjectItems" multiple="multiple" class="multi-select form-control custom-radio" id="StudentsId" asp-for="SubjectIds">
                        </select>
                        <span class="text-danger" asp-validation-for="SubjectIds"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="5" cols="8"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="d-flex">
                <button class="btn btn-secondary flex-grow-1">
                    Create Module
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-3">
    </div>
</div>
