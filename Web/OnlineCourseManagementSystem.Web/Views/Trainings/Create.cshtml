@using OnlineCourseManagementSystem.Web.ViewModels.Trainings
@model CreateTrainingInputModel
@{
    this.ViewData["Title"] = "Create Training";
}

@if (this.TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @this.TempData["ErrorMessage"]
    </div>
 }


<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<h3 class="text-center my-3">Create Training</h3>

<div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
        <form asp-controller="Trainings" asp-action="Create" method="post">
            <div asp-validation-summary="All"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input class="form-control" type="text" asp-for="Name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ModuleIds"></label>
                        <select asp-items="@this.Model.ModuleItems" multiple="multiple" class="multi-select form-control custom-radio" id="StudentsId" asp-for="ModuleIds">
                        </select>
                        <span class="text-danger" asp-validation-for="ModuleIds"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TrainingType">Training Type</label>
                <select class="form-control" asp-for="TrainingType">
                    @foreach (var trainingType in this.Model.TrainingTypeItems)
                    {
                        <option value="@trainingType">@trainingType</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="TrainingType"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link"></label>
                <input type="text" asp-for="Link" class="form-control" />
            </div>
            @*<div class="form-group">
                <label asp-for="Image"></label>
                <input type="file" class="form-control" />
            </div>*@
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="5" cols="8"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="d-flex">
                <button class="btn btn-secondary flex-grow-1">Create Training</button>
            </div>
        </form>
    </div>
    <div class="col-md-3">

    </div>
</div>
